---
import siteConfig from '../data/site-config';
import { Image } from 'astro:assets';
import mobile from '../content/img/home/hero.jpg';
import mobile_dark from '../content/img/home/hero_dark.jpg';
import m1 from 'https://shared.cloudflare.steamstatic.com/store_item_assets/steam/apps/978780/library_600x900_2x.jpg?t=1622850402';
import m2 from 'https://shared.cloudflare.steamstatic.com/store_item_assets/steam/apps/413150/library_600x900_2x.jpg?t=1710874357';
import m3 from 'https://shared.cloudflare.steamstatic.com/store_item_assets/steam/apps/1868140/library_600x900_2x.jpg?t=1734352298';
import m4 from 'https://shared.cloudflare.steamstatic.com/store_item_assets/steam/apps/1808680/library_600x900_2x.jpg?t=1732721335';
import m5 from 'https://shared.cloudflare.steamstatic.com/store_item_assets/steam/apps/1177980/library_600x900_2x.jpg?t=1734569573';
const m1_alt = 'STORY OF SEASONS: Friends of Mineral Town';
const m2_alt = 'Stardew Valley';
const m3_alt = 'DAVE THE DIVER';
const m4_alt = 'Snufkin: Melody of Moominvalley';
const m5_alt = 'Little Kitty, Big City';
const hero = siteConfig.hero;
---

{
  (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
    <section class='w-full flex flex-col gap-2 mb-16 sm:mb-24'>
      <h1 class='text-3xl font-serif sm:mb-3 font-medium sm:text-5xl '>{hero.title}</h1>
      <h2 class='text-xl sm:text-[2rem] font-serif'>living in the mountains of Pai, Thailand.</h2>
    </section>
  )
}

<div class='mb-12 -mx-4 md:hidden dark:hidden' aria-hidden='true'>
  <Image src={mobile} alt='Menn in Pai, Thailand' class='w-full' widths={[390, 780]} quality={50} loading='eager' decoding='sync' />
</div>

<div class='hidden dark:block mb-12 -mx-4 dark:md:hidden' aria-hidden='true'>
  <Image src={mobile_dark} alt='Menn in Pai, Thailand' class='w-full' widths={[390, 780]} quality={50} loading='eager' decoding='sync' />
</div>

<div class='hidden md:block md:mb-20 mx-[calc(50%-50vw)]'>
  <div
    class='-my-4 flex justify-center py-4 overflow-hidden gap-6 lg:gap-8 *:relative *:aspect-[9/10] *:flex-none *:overflow-hidden *:rounded-xl *:shadow *:w-72 *:lg:w-64 *:xl:w-[315px]'
  >
    <div class='rotate-2 hidden sm:block'>
      <Image src={m1} alt={m1_alt} class='absolute inset-0 h-full w-full object-cover' widths={[315, 630]} quality={50} loading='eager' decoding='sync' />
    </div>
    <div class='-rotate-2'>
      <Image src={m2} alt={m2_alt} class='absolute inset-0 h-full w-full object-cover' widths={[315, 630]} quality={50} loading='eager' decoding='sync' />
    </div>
    <div class='rotate-1'>
      <Image src={m3} alt={m3_alt} class='absolute inset-0 h-full w-full object-cover' widths={[315, 630]} quality={50} loading='eager' decoding='sync' />
    </div>
    <div class='-rotate-1'>
      <Image src={m4} alt={m4_alt} class='absolute inset-0 h-full w-full object-cover' widths={[315, 630]} quality={50} loading='eager' decoding='sync' />
    </div>
    <div class='rotate-1 hidden sm:block'>
      <Image src={m5} alt={m5_alt} class='absolute inset-0 h-full w-full object-cover' widths={[315, 630]} quality={50} loading='eager' decoding='sync' />
    </div>
  </div>
</div>
